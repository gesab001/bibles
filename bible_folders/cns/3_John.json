{
    "version": "cns",
    "book_name": "3 John",
    "book_nr": "64",
    "book": {
        "1": {
            "chapter_nr": 1,
            "chapter": {
                "1": {
                    "verse_nr": 1,
                    "verse": "\u95ee\u5b89\u6211\u8fd9\u4f5c\u957f\u8001\u7684\u5199\u4fe1\u7ed9\u4eb2\u7231\u7684\u8be5\u72b9\uff0c\u5c31\u662f\u6211\u5728\u771f\u7406\u4e2d\u6240\u7231\u7684\u3002\n"
                },
                "2": {
                    "verse_nr": 2,
                    "verse": "\u4eb2\u7231\u7684\uff0c\u6211\u795d\u4f60\u51e1\u4e8b\u4ea8\u901a\uff0c\u8eab\u4f53\u5065\u58ee\uff0c\u6b63\u5982\u4f60\u7684\u7075\u9b42\u5b89\u6cf0\u4e00\u6837\u3002\n"
                },
                "3": {
                    "verse_nr": 3,
                    "verse": "\u6709\u4e9b\u5f1f\u5144\u6765\u5230\uff0c\u8bc1\u5b9e\u4f60\u5fc3\u4e2d\u5b58\u6709\u771f\u7406\uff0c\u5c31\u662f\u4f60\u6309\u771f\u7406\u884c\u4e8b\uff0c\u6211\u5c31\u975e\u5e38\u6b23\u6170\u3002\n"
                },
                "4": {
                    "verse_nr": 4,
                    "verse": "\u6211\u542c\u89c1\u6211\u7684\u513f\u5973\u6309\u771f\u7406\u884c\u4e8b\uff0c\u6211\u7684\u559c\u4e50\u6ca1\u6709\u6bd4\u8fd9\u66f4\u5927\u7684\u4e86\u3002\n"
                },
                "5": {
                    "verse_nr": 5,
                    "verse": "\u79f0\u8d5e\u8be5\u72b9\u63a5\u5f85\u5f1f\u5144\u4eb2\u7231\u7684\uff0c\u4f60\u5411\u5f1f\u5144\u6240\u884c\u7684\uff0c\u7279\u522b\u662f\u5411\u5916\u5730\u6765\u7684\u5f1f\u5144\u6240\u884c\u7684\uff0c\u90fd\u662f\u51fa\u4e8e\u5fe0\u5fc3\u3002\n"
                },
                "6": {
                    "verse_nr": 6,
                    "verse": "\u4ed6\u4eec\u5728\u6559\u4f1a\u9762\u524d\u8bc1\u5b9e\u4e86\u4f60\u7684\u7231\uff1b\u4f60\u7167\u7740\u3000\u795e\u6240\u559c\u60a6\u7684\uff0c\u8d44\u52a9\u4ed6\u4eec\u7684\u65c5\u7a0b\uff0c\u8fd9\u6837\u662f\u597d\u7684\u3002\n"
                },
                "7": {
                    "verse_nr": 7,
                    "verse": "\u56e0\u4e3a\u4ed6\u4eec\u4e3a\u4e3b\u7684\u540d\u51fa\u5916\uff0c\u5e76\u6ca1\u6709\u4ece\u6559\u5916\u4eba\u63a5\u53d7\u4ec0\u4e48\u3002\n"
                },
                "8": {
                    "verse_nr": 8,
                    "verse": "\u6240\u4ee5\u6211\u4eec\u5e94\u5f53\u63a5\u5f85\u8fd9\u6837\u7684\u4eba\uff0c\u597d\u8ba9\u6211\u4eec\u4e3a\u4e86\u771f\u7406\u6210\u4e3a\u540c\u5de5\u3002\n"
                },
                "9": {
                    "verse_nr": 9,
                    "verse": "\u4e0d\u8981\u6548\u6cd5\u6076\uff0c\u5e94\u8be5\u6548\u6cd5\u5584\u6211\u66fe\u7ecf\u7565\u7565\u5199\u4fe1\u7ed9\u4f60\u90a3\u91cc\u7684\u6559\u4f1a\uff0c\u4f46\u4ed6\u4eec\u4e2d\u95f4\u90a3\u597d\u4f5c\u9886\u8896\u7684\u4e22\u7279\u8153\u4e0d\u63a5\u5f85\u6211\u4eec\u3002\n"
                },
                "10": {
                    "verse_nr": 10,
                    "verse": "\u56e0\u6b64\uff0c\u6211\u6765\u7684\u65f6\u5019\uff0c\u5fc5\u8981\u63d0\u8d77\u4ed6\u6240\u4f5c\u7684\u4e8b\uff0c\u5c31\u662f\u4ed6\u7528\u6076\u8a00\u4e2d\u4f24\u6211\u4eec\uff1b\u8fd9\u8fd8\u4e0d\u591f\uff0c\u4ed6\u4e0d\u4f46\u4e0d\u63a5\u5f85\u5f1f\u5144\uff0c\u8fd8\u8981\u963b\u6b62\u90a3\u4e9b\u60f3\u8981\u63a5\u5f85\u7684\u4eba\uff0c\u751a\u81f3\u628a\u4ed6\u4eec\u8d76\u51fa\u6559\u4f1a\u3002\n"
                },
                "11": {
                    "verse_nr": 11,
                    "verse": "\u4eb2\u7231\u7684\uff0c\u4e0d\u8981\u6548\u6cd5\u6076\uff0c\u5e94\u8be5\u6548\u6cd5\u5584\u3002\u884c\u5584\u7684\u5c5e\u4e8e\u3000\u795e\uff0c\u4f5c\u6076\u7684\u6ca1\u6709\u89c1\u8fc7\u3000\u795e\u3002\n"
                },
                "12": {
                    "verse_nr": 12,
                    "verse": "\u4f4e\u7c73\u4e22\u884c\u5584\uff0c\u6709\u4f17\u4eba\u4e3a\u4ed6\u4f5c\u8bc1\uff0c\u771f\u7406\u672c\u8eab\u4e5f\u4e3a\u4ed6\u4f5c\u8bc1\u3002\u6211\u4eec\u4e5f\u4e3a\u4ed6\u4f5c\u8bc1\uff0c\u4f60\u77e5\u9053\u6211\u4eec\u7684\u89c1\u8bc1\u662f\u771f\u7684\u3002\n"
                },
                "13": {
                    "verse_nr": 13,
                    "verse": "\u95ee\u5019\u7684\u8bdd\u6211\u8fd8\u6709\u8bb8\u591a\u8bdd\u8981\u5199\u7ed9\u4f60\uff0c\u53ef\u662f\u6211\u4e0d\u613f\u501f\u7528\u7b14\u58a8\u3002\n"
                },
                "14": {
                    "verse_nr": 14,
                    "verse": "\u6211\u76fc\u671b\u5f88\u5feb\u5c31\u89c1\u5230\u4f60\uff0c\u5f53\u9762\u8c08\u8c08\u3002 [ (III John 1:15) \u613f\u4f60\u5e73\u5b89\u3002\u8fd9\u91cc\u7684\u670b\u53cb\u90fd\u95ee\u5019\u4f60\u3002\u8bf7\u4f60\u4e00\u4e00\u63d0\u540d\u95ee\u5019\u4f60\u90a3\u91cc\u7684\u670b\u53cb\u3002 ]\n"
                }
            }
        }
    }
}