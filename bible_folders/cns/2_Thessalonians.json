    "book": {
        "1": {
            "chapter_nr": 1,
            "chapter": {
                "1": {
                    "verse_nr": 1,
                    "verse": "\u95ee\u5b89\n"
                },
                "2": {
                    "verse_nr": 2,
                    "verse": "\u613f\u6069\u60e0\u5e73\u5b89\u4ece\u7236\u3000\u795e\u548c\u4e3b\u8036\u7a23\u57fa\u7763\u4e34\u5230\u4f60\u4eec\u3002\n"
                },
                "3": {
                    "verse_nr": 3,
                    "verse": "\u4e3b\u518d\u6765\u65f6\u5fc5\u65bd\u884c\u5ba1\u5224\u5f1f\u5144\u4eec\uff0c\u6211\u4eec\u5e94\u8be5\u5e38\u5e38\u4e3a\u4f60\u4eec\u611f\u8c22\u3000\u795e\uff0c\u8fd9\u662f\u5408\u9002\u7684\u3002\u56e0\u4e3a\u4f60\u4eec\u7684\u4fe1\u5fc3\u683c\u5916\u957f\u8fdb\uff0c\u4f60\u4eec\u4f17\u4eba\u5f7c\u6b64\u76f8\u7231\u7684\u5fc3\u4e5f\u5728\u589e\u52a0\u3002\n"
                },
                "4": {
                    "verse_nr": 4,
                    "verse": "\u6240\u4ee5\u6211\u4eec\u5728\u3000\u795e\u7684\u4f17\u6559\u4f1a\u91cc\uff0c\u4eb2\u81ea\u5938\u5956\u4f60\u4eec\uff0c\u56e0\u4e3a\u4f60\u4eec\u5728\u6240\u53d7\u7684\u4e00\u5207\u8feb\u5bb3\u60a3\u96be\u4e2d\uff0c\u4ecd\u7136\u5b58\u7740\u575a\u5fcd\u548c\u4fe1\u5fc3\u3002\n"
                },
                "5": {
                    "verse_nr": 5,
                    "verse": "\u8fd9\u6b63\u662f\u3000\u795e\u516c\u4e49\u5224\u65ad\u7684\u660e\u8bc1\uff0c\u4f7f\u4f60\u4eec\u53ef\u4ee5\u7b97\u662f\u914d\u5f97\u4e0a\u4ed6\u7684\u56fd\uff1b\u4f60\u4eec\u4e5f\u662f\u4e3a\u4e86\u3000\u795e\u7684\u56fd\u800c\u53d7\u82e6\u3002\n"
                },
                "6": {
                    "verse_nr": 6,
                    "verse": "\u3000\u795e\u65e2\u7136\u662f\u516c\u4e49\u7684\uff0c\u4e3b\u8036\u7a23\u548c\u4ed6\u6709\u80fd\u529b\u7684\u5929\u4f7f\u4ece\u5929\u4e0a\u663e\u73b0\u5728\u706b\u7130\u4e2d\u7684\u65f6\u5019\uff0c\u5c31\u4f7f\u4f60\u4eec\u8fd9\u4e9b\u53d7\u707e\u96be\u7684\u4eba\uff0c\u53ef\u4ee5\u548c\u6211\u4eec\u540c\u4eab\u5b89\u606f\uff1b\u5374\u4ee5\u707e\u96be\u62a5\u5e94\u90a3\u4e9b\u628a\u707e\u96be\u52a0\u7ed9\u4f60\u4eec\u7684\u4eba\u3002\n"
                },
                "7": {
                    "verse_nr": 7,
                    "verse": " \n"
                },
                "8": {
                    "verse_nr": 8,
                    "verse": "\u53c8\u8981\u62a5\u5e94\u90a3\u4e9b\u4e0d\u8ba4\u8bc6\u3000\u795e\u3001\u4e0d\u542c\u4ece\u6211\u4eec\u4e3b\u8036\u7a23\u7684\u798f\u97f3\u7684\u4eba\u3002\n"
                },
                "9": {
                    "verse_nr": 9,
                    "verse": "\u5f53\u4e3b\u6765\u7684\u65f6\u5019\uff0c\u4ed6\u4eec\u8981\u53d7\u6c38\u8fdc\u6c89\u6ca6\u7684\u60e9\u7f5a\uff0c\u5c31\u662f\u79bb\u5f00\u4e3b\u7684\u9762\u548c\u4ed6\u6743\u80fd\u7684\u8363\u5149\u3002\u5728\u90a3\u4e00\u5929\uff0c\u4ed6\u8981\u5728\u5723\u5f92\u8eab\u4e0a\u5f97\u7740\u8363\u8000\uff0c\u53c8\u8981\u5728\u6240\u6709\u4fe1\u5f92\u8eab\u4e0a\u53d7\u5230\u5c0a\u5d07\uff08\u4f60\u4eec\u4e5f\u5728\u4ed6\u4eec\u5f53\u4e2d\uff0c\u56e0\u4e3a\u4f60\u4eec\u4fe1\u4e86\u6211\u4eec\u5411\u4f60\u4eec\u6240\u4f5c\u7684\u89c1\u8bc1\uff09\u3002\n"
                },
                "10": {
                    "verse_nr": 10,
                    "verse": " \n"
                },
                "11": {
                    "verse_nr": 11,
                    "verse": "\u56e0\u6b64\uff0c\u6211\u4eec\u5e38\u5e38\u4e3a\u4f60\u4eec\u7977\u544a\uff0c\u613f\u6211\u4eec\u7684\u3000\u795e\u770b\u4f60\u4eec\u662f\u914d\u5f97\u4e0a\u6240\u8499\u7684\u53ec\uff0c\u53c8\u7528\u5927\u80fd\u6210\u5c31\u4f60\u4eec\u6240\u7fa1\u6155\u7684\u4e00\u5207\u826f\u5584\u548c\u4fe1\u5fc3\u7684\u5de5\u4f5c\uff0c\n"
                },
                "12": {
                    "verse_nr": 12,
                    "verse": "\u4f7f\u6211\u4eec\u4e3b\u8036\u7a23\u7684\u540d\uff0c\u7167\u7740\u6211\u4eec\u7684\u3000\u795e\u548c\u4e3b\u8036\u7a23\u57fa\u7763\u7684\u6069\uff0c\u5728\u4f60\u4eec\u8eab\u4e0a\u5f97\u7740\u8363\u8000\uff0c\u4f60\u4eec\u4e5f\u5728\u4ed6\u8eab\u4e0a\u5f97\u7740\u8363\u8000\u3002\n"
                }
            }
        },
        "2": {
            "chapter_nr": 2,
            "chapter": {
                "1": {
                    "verse_nr": 1,
                    "verse": "\u4e0d\u6cd5\u7684\u4eba\u5fc5\u8981\u663e\u9732\n"
                },
                "2": {
                    "verse_nr": 2,
                    "verse": "\u65e0\u8bba\u6709\u7075\u3001\u6709\u8bdd\u3001\u6709\u5192\u6211\u4eec\u7684\u540d\u7684\u4e66\u4fe1\uff0c\u8bf4\u4e3b\u7684\u65e5\u5b50\u73b0\u5728\u5230\u4e86\uff0c\u4f60\u4eec\u90fd\u4e0d\u8981\u8f7b\u6613\u52a8\u5fc3\uff0c\u4e5f\u4e0d\u8981\u60ca\u614c\u3002\n"
                },
                "3": {
                    "verse_nr": 3,
                    "verse": "\u4e0d\u8981\u8ba9\u4eba\u7528\u4efb\u4f55\u65b9\u6cd5\u8ff7\u60d1\u4e86\u4f60\u4eec\uff0c\u56e0\u4e3a\u4e3b\u7684\u65e5\u5b50\u6765\u5230\u4ee5\u524d\uff0c\u5fc5\u5b9a\u6709\u80cc\u9053\u7684\u4e8b\uff0c\u5e76\u4e14\u90a3\u4e0d\u6cd5\u7684\u4eba\uff0c\u5c31\u662f\u90a3\u6c89\u6ca6\u4e4b\u5b50\uff0c\u5fc5\u5b9a\u663e\u9732\u51fa\u6765\u3002\n"
                },
                "4": {
                    "verse_nr": 4,
                    "verse": "\u4ed6\u62b5\u6321\u3000\u795e\uff0c\u62ac\u4e3e\u81ea\u5df1\uff0c\u9ad8\u8fc7\u4e00\u5207\u79f0\u4e3a\u795e\u548c\u53d7\u4eba\u656c\u62dc\u7684\uff0c\u751a\u81f3\u5750\u5728\u3000\u795e\u7684\u6bbf\u4e2d\uff0c\u81ea\u79f0\u4e3a\u3000\u795e\u3002\n"
                },
                "5": {
                    "verse_nr": 5,
                    "verse": "\u6211\u8fd8\u5728\u4f60\u4eec\u90a3\u91cc\u7684\u65f6\u5019\uff0c\u66fe\u7ecf\u628a\u8fd9\u4e9b\u4e8b\u544a\u8bc9\u4f60\u4eec\uff0c\u4f60\u4eec\u4e0d\u8bb0\u5f97\u5417\uff1f\n"
                },
                "6": {
                    "verse_nr": 6,
                    "verse": "\u73b0\u5728\u4f60\u4eec\u4e5f\u77e5\u9053\uff0c\u90a3\u7b9d\u5236\u4ed6\uff0c\u4f7f\u4ed6\u5230\u4e86\u65f6\u5019\u624d\u53ef\u4ee5\u663e\u9732\u51fa\u6765\u7684\u662f\u4ec0\u4e48\u3002\n"
                },
                "7": {
                    "verse_nr": 7,
                    "verse": "\u56e0\u4e3a\u90a3\u4e0d\u6cd5\u7684\u6f5c\u529b\u5df2\u7ecf\u53d1\u52a8\uff0c\u53ea\u662f\u73b0\u5728\u6709\u4e00\u4e2a\u7b9d\u5236\u4ed6\u7684\u5728\u90a3\u91cc\uff0c\u76f4\u7b49\u5230\u90a3\u7b9d\u5236\u89e3\u9664\u4e86\uff0c\n"
                },
                "8": {
                    "verse_nr": 8,
                    "verse": "\u90a3\u65f6\uff0c\u8fd9\u4e0d\u6cd5\u7684\u4eba\u5fc5\u8981\u663e\u9732\u51fa\u6765\u3002\u4e3b\u8036\u7a23\u8981\u7528\u81ea\u5df1\u53e3\u4e2d\u7684\u6c14\u9664\u6389\u4ed6\uff0c\u4ee5\u81ea\u5df1\u518d\u6765\u6240\u663e\u73b0\u7684\u5149\u8f89\u6d88\u706d\u4ed6\u3002\n"
                },
                "9": {
                    "verse_nr": 9,
                    "verse": "\u8fd9\u4e0d\u6cd5\u7684\u4eba\u6765\u5230\uff0c\u662f\u7167\u7740\u6492\u4f46\u7684\u884c\u52a8\uff0c\u884c\u5404\u6837\u7684\u5f02\u80fd\u5947\u8ff9\u548c\u8352\u8bde\u7684\u4e8b\uff0c\n"
                },
                "10": {
                    "verse_nr": 10,
                    "verse": "\u5e76\u4e14\u5728\u90a3\u4e9b\u6c89\u6ca6\u7684\u4eba\u8eab\u4e0a\uff0c\u884c\u5404\u6837\u4e0d\u4e49\u7684\u6b3a\u8bc8\uff0c\u56e0\u4e3a\u4ed6\u4eec\u4e0d\u9886\u53d7\u7231\u771f\u7406\u7684\u5fc3\uff0c\u4f7f\u4ed6\u4eec\u5f97\u6551\u3002\n"
                },
                "11": {
                    "verse_nr": 11,
                    "verse": "\u56e0\u6b64\uff0c\u3000\u795e\u5c31\u4f7f\u9519\u8c2c\u7684\u601d\u60f3\u8fd0\u884c\u5728\u4ed6\u4eec\u5f53\u4e2d\uff0c\u8ba9\u4ed6\u4eec\u76f8\u4fe1\u865a\u8c0e\uff0c\n"
                },
                "12": {
                    "verse_nr": 12,
                    "verse": "\u53eb\u6240\u6709\u4e0d\u4fe1\u771f\u7406\u5012\u559c\u7231\u4e0d\u4e49\u7684\u4eba\uff0c\u90fd\u88ab\u5b9a\u7f6a\u3002\n"
                },
                "13": {
                    "verse_nr": 13,
                    "verse": "\u7ad9\u7acb\u5f97\u7a33\u6301\u5b88\u4fe1\u4ef0\u4e3b\u6240\u7231\u7684\u5f1f\u5144\u4eec\uff0c\u6211\u4eec\u5e94\u8be5\u5e38\u5e38\u4e3a\u4f60\u4eec\u611f\u8c22\u3000\u795e\uff0c\u56e0\u4e3a\u4ed6\u4ece\u8d77\u521d\u5c31\u62e3\u9009\u4e86\u4f60\u4eec\uff0c\u501f\u7740\u5723\u7075\u6210\u5723\u7684\u5de5\u4f5c\uff0c\u548c\u4f60\u4eec\u5bf9\u771f\u9053\u7684\u4fe1\u5fc3\uff0c\u4f7f\u4f60\u4eec\u53ef\u4ee5\u5f97\u6551\u3002\n"
                },
                "14": {
                    "verse_nr": 14,
                    "verse": "\u56e0\u6b64\uff0c\u3000\u795e\u501f\u7740\u6211\u4eec\u6240\u4f20\u7684\u798f\u97f3\u547c\u53ec\u4f60\u4eec\uff0c\u4f7f\u4f60\u4eec\u5f97\u7740\u6211\u4eec\u4e3b\u8036\u7a23\u57fa\u7763\u7684\u8363\u8000\u3002\n"
                },
                "15": {
                    "verse_nr": 15,
                    "verse": "\u6240\u4ee5\u5f1f\u5144\u4eec\uff0c\u4f60\u4eec\u8981\u7ad9\u7acb\u5f97\u7a33\uff1b\u4f60\u4eec\u6240\u9886\u53d7\u7684\u6559\u8bad\uff0c\u65e0\u8bba\u662f\u6211\u4eec\u53e3\u4f20\u7684\uff0c\u6216\u662f\u4fe1\u4e0a\u5199\u7684\uff0c\u90fd\u8981\u6301\u5b88\u3002\n"
                },
                "16": {
                    "verse_nr": 16,
                    "verse": "\u613f\u6211\u4eec\u7684\u4e3b\u8036\u7a23\u57fa\u7763\u81ea\u5df1\uff0c\u548c\u90a3\u7231\u6211\u4eec\u3001\u5f00\u6069\u628a\u6c38\u8fdc\u7684\u5b89\u6170\u548c\u7f8e\u597d\u7684\u76fc\u671b\u8d50\u7ed9\u6211\u4eec\u7684\u7236\u3000\u795e\uff0c\n"
                },
                "17": {
                    "verse_nr": 17,
                    "verse": "\u5b89\u6170\u4f60\u4eec\u7684\u5fc3\uff0c\u5e76\u4e14\u5728\u4e00\u5207\u5584\u884c\u5584\u8a00\u4e0a\uff0c\u575a\u5b9a\u4f60\u4eec\u3002\n"
                }
            }
        },
        "3": {
            "chapter_nr": 3,
            "chapter": {
                "1": {
                    "verse_nr": 1,
                    "verse": "\u7948\u6c42\u4e3b\u7684\u9053\u5feb\u5feb\u4f20\u5f00\n"
                },
                "2": {
                    "verse_nr": 2,
                    "verse": "\u4e5f\u4f7f\u6211\u4eec\u80fd\u591f\u8131\u79bb\u90a3\u4e9b\u4e0d\u8bb2\u7406\u7684\u6076\u4eba\uff0c\u56e0\u4e3a\u4e0d\u662f\u4eba\u4eba\u90fd\u6709\u4fe1\u5fc3\u3002\n"
                },
                "3": {
                    "verse_nr": 3,
                    "verse": "\u4e3b\u662f\u4fe1\u5b9e\u7684\uff0c\u4ed6\u5fc5\u575a\u5b9a\u4f60\u4eec\uff0c\u4fdd\u62a4\u4f60\u4eec\u8131\u79bb\u90a3\u6076\u8005\u3002\n"
                },
                "4": {
                    "verse_nr": 4,
                    "verse": "\u6211\u4eec\u9760\u7740\u4e3b\u6df1\u6df1\u76f8\u4fe1\uff0c\u4f60\u4eec\u73b0\u5728\u4ee5\u53ca\u5c06\u6765\u90fd\u4f1a\u9075\u884c\u6211\u4eec\u6240\u5429\u5490\u7684\uff0c\n"
                },
                "5": {
                    "verse_nr": 5,
                    "verse": "\u613f\u4e3b\u5f15\u5bfc\u4f60\u4eec\u7684\u5fc3\uff0c\u4f7f\u4f60\u4eec\u6709\u3000\u795e\u7684\u7231\u548c\u57fa\u7763\u7684\u575a\u5fcd\u3002\n"
                },
                "6": {
                    "verse_nr": 6,
                    "verse": "\u4e0d\u53ef\u6e38\u624b\u597d\u95f2\u5f1f\u5144\u4eec\uff0c\u6211\u4eec\u5949\u4e3b\u8036\u7a23\u57fa\u7763\u7684\u540d\u5429\u5490\u4f60\u4eec\uff0c\u51e1\u662f\u6e38\u624b\u597d\u95f2\u7684\u5f1f\u5144\uff0c\u4e0d\u6309\u7740\u4f60\u4eec\u4ece\u6211\u4eec\u6240\u9886\u53d7\u7684\u6559\u8bad\u53bb\u884c\uff0c\u5c31\u5e94\u5f53\u8fdc\u79bb\u4ed6\u3002\n"
                },
                "7": {
                    "verse_nr": 7,
                    "verse": "\u4f60\u4eec\u81ea\u5df1\u672c\u6765\u5c31\u77e5\u9053\u5e94\u5f53\u600e\u6837\u6548\u6cd5\u6211\u4eec\uff0c\u56e0\u4e3a\u6211\u4eec\u5728\u4f60\u4eec\u4e2d\u95f4\u5e76\u6ca1\u6709\u6e38\u624b\u597d\u95f2\uff0c\n"
                },
                "8": {
                    "verse_nr": 8,
                    "verse": "\u4e5f\u6ca1\u6709\u767d\u5403\u8fc7\u8c01\u7684\u996d\uff0c\u53cd\u800c\u8f9b\u82e6\u52b3\u788c\uff0c\u663c\u591c\u4f5c\u5de5\uff0c\u514d\u5f97\u52a0\u91cd\u4f60\u4eec\u4efb\u4f55\u4e00\u4eba\u7684\u8d1f\u62c5\u3002\n"
                },
                "9": {
                    "verse_nr": 9,
                    "verse": "\u8fd9\u4e0d\u662f\u56e0\u4e3a\u6211\u4eec\u6ca1\u6709\u6743\u5229\uff0c\u800c\u662f\u8981\u7ed9\u4f60\u4eec\u4f5c\u699c\u6837\uff0c\u597d\u8ba9\u4f60\u4eec\u6548\u6cd5\u6211\u4eec\u3002\n"
                },
                "10": {
                    "verse_nr": 10,
                    "verse": "\u6211\u4eec\u5728\u4f60\u4eec\u90a3\u91cc\u7684\u65f6\u5019\uff0c\u66fe\u7ecf\u5429\u5490\u8fc7\u4f60\u4eec\uff0c\u5982\u679c\u6709\u4eba\u4e0d\u80af\u4f5c\u5de5\uff0c\u5c31\u4e0d\u53ef\u5403\u996d\u3002\n"
                },
                "11": {
                    "verse_nr": 11,
                    "verse": "\u56e0\u4e3a\u6211\u4eec\u542c\u8bf4\uff0c\u4f60\u4eec\u4e2d\u95f4\u6709\u4eba\u6e38\u624b\u597d\u95f2\uff0c\u4ec0\u4e48\u5de5\u4e5f\u4e0d\u4f5c\uff0c\u53cd\u5012\u4e13\u7ba1\u95f2\u4e8b\u3002\n"
                },
                "12": {
                    "verse_nr": 12,
                    "verse": "\u6211\u4eec\u9760\u7740\u4e3b\u8036\u7a23\u57fa\u7763\uff0c\u5429\u5490\u529d\u6212\u8fd9\u6837\u7684\u4eba\uff0c\u8981\u5b89\u9759\u4f5c\u5de5\uff0c\u81ea\u98df\u5176\u529b\u3002\n"
                },
                "13": {
                    "verse_nr": 13,
                    "verse": "\u5f1f\u5144\u4eec\uff0c\u4f60\u4eec\u884c\u5584\u4e0d\u53ef\u7070\u5fc3\u3002\n"
                },
