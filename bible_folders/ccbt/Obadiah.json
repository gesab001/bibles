{
    "version": "ccbt",
    "book_name": "Obadiah",
    "book_nr": "31",
    "book": {
        "1": {
            "chapter_nr": "1",
            "chapter": {
                "1": {
                    "verse_nr": "1",
                    "verse": "\u4fc4\u5df4\u5e95\u4e9e\u770b\u5230\u7684\u7570\u8c61\u3002 \u8036\u548c\u83ef\u61f2\u7f70\u4ee5\u6771 - \u8ad6\u5230\u4ee5\u6771\uff0c \u4e3b\u8036\u548c\u83ef\u9019\u6a23\u8aaa\uff1a \u300c\u6211\u5011\u5f9e\u8036\u548c\u83ef\u90a3\u88e1\u807d\u5230\u6d88\u606f\uff0c \u6709\u4f4d\u4f7f\u8005\u88ab\u6d3e\u5230\u5404\u570b\uff0c\u8aaa\uff0c \u300e\u4f86\uff01\u6211\u5011\u53bb\u653b\u6253\u4ee5\u6771\u5427\uff01\u300f\u300d"
                },
                "2": {
                    "verse_nr": "2",
                    "verse": "\u8036\u548c\u83ef\u5c0d\u4ee5\u6771\u8aaa\uff1a \u300c\u6211\u8981\u8b93\u4f60\u6210\u70ba\u5217\u570b\u4e2d\u6700\u5f31\u5c0f\u7684\u570b\u5bb6\uff0c \u4f7f\u4f60\u98fd\u53d7\u85d0\u8996\u3002"
                },
                "3": {
                    "verse_nr": "3",
                    "verse": "\u4f60\u4f4f\u5728\u61f8\u5d16\u5ced\u58c1\u9593\uff0c \u4f4f\u5728\u9ad8\u5c71\u4e0a\uff0c \u81ea\u4ee5\u70ba\u8ab0\u4e5f\u4e0d\u80fd\u628a\u4f60\u62c9\u4e0b\u4f86\uff0c \u4f46\u4f60\u7684\u9a55\u50b2\u6b3a\u9a19\u4e86\u4f60\u3002"
                },
                "4": {
                    "verse_nr": "4",
                    "verse": "\u5373\u4f7f\u4f60\u5982\u9df9\u9ad8\u98db\uff0c \u5728\u661f\u8fb0\u9593\u7bc9\u5de2\uff0c \u6211\u4e5f\u5fc5\u628a\u4f60\u62c9\u4e0b\u4f86\u3002 \u9019\u662f\u8036\u548c\u83ef\u8aaa\u7684\u3002"
                },
                "5": {
                    "verse_nr": "5",
                    "verse": "\u300c\u76dc\u8cca\u6df1\u591c\u6d17\u52ab\u4f60\u7684\u5bb6\uff0c \u4e0d\u6703\u6d17\u52ab\u4e00\u7a7a\uff1b \u4eba\u5011\u6458\u8461\u8404\uff0c\u4e0d\u6703\u6458\u5149\uff1b \u4f46\u4f60\u6703\u88ab\u5fb9\u5e95\u6bc0\u6ec5\uff01"
                },
                "6": {
                    "verse_nr": "6",
                    "verse": "\u4ee5\u6383\u8981\u88ab\u6d17\u52ab\u4e00\u7a7a\uff0c \u4ed6\u85cf\u7684\u73cd\u5bf6\u8981\u88ab\u641c\u53bb\u3002"
                },
                "7": {
                    "verse_nr": "7",
                    "verse": "\u4f60\u7684\u76df\u53cb\u5c07\u4f60\u9010\u51fa\u5bb6\u5712\uff1b \u4f60\u7684\u670b\u53cb\u6b3a\u9a19\u4f60\uff0c\u6230\u52dd\u4f60\uff1b \u4f60\u7684\u77e5\u5df1\u8a2d\u9677\u9631\u5bb3\u4f60\uff0c \u4f60\u537b\u61f5\u7136\u4e0d\u77e5\u3002\u300d"
                },
                "8": {
                    "verse_nr": "8",
                    "verse": "\u8036\u548c\u83ef\u8aaa\uff1a\u300c\u5230\u90a3\u5929\uff0c \u6211\u8981\u6bc0\u6ec5\u4ee5\u6771\u7684\u667a\u8005\uff0c \u9664\u6389\u4ee5\u6383\u5c71\u4e0a\u7684\u660e\u54f2\u3002"
                },
                "9": {
                    "verse_nr": "9",
                    "verse": "\u63d0\u5e54\u7684\u52c7\u58eb\u5fc5\u9a5a\u614c\u5931\u63aa\uff0c \u4ee5\u6383\u5c71\u4e0a\u7684\u4eba\u76e1\u906d\u6bba\u622e\u3002"
                },
                "10": {
                    "verse_nr": "10",
                    "verse": "\u61f2\u7f70\u4ee5\u6771\u7684\u539f\u56e0 - \u300c\u56e0\u4f60\u66fe\u6b98\u66b4\u5730\u5c0d\u5f85\u540c\u80de\u5144\u5f1f\u96c5\u5404\uff0c \u4f60\u5fc5\u8499\u7f9e\uff0c\u6c38\u906d\u6bc0\u6ec5\u3002"
                },
                "11": {
                    "verse_nr": "11",
                    "verse": "\u5916\u65cf\u4eba\u63a0\u596a\u96c5\u5404\u7684\u8ca1\u7269\uff0c \u653b\u5165\u8036\u8def\u6492\u51b7\u62bd\u7c64\u5206\u8d13\u6642\uff0c \u4f60\u7adf\u7136\u8896\u624b\u65c1\u89c0\uff0c \u5c31\u50cf\u4ed6\u5011\u7684\u540c\u5925\u4e00\u6a23\u3002"
                },
                "12": {
                    "verse_nr": "12",
                    "verse": "\u4f60\u7684\u89aa\u65cf\u906d\u96e3\u4e4b\u65e5\uff0c \u4f60\u4e0d\u8a72\u5e78\u707d\u6a02\u798d\uff1b \u7336\u5927\u4eba\u88ab\u6ec5\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8a72\u8208\u9ad8\u91c7\u70c8\uff1b \u4ed6\u5011\u906d\u96e3\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8a72\u53e3\u51fa\u72c2\u8a00\uff1b"
                },
                "13": {
                    "verse_nr": "13",
                    "verse": "\u6211\u5b50\u6c11\u906d\u96e3\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8a72\u95d6\u9032\u4ed6\u5011\u7684\u57ce\uff1b \u4ed6\u5011\u906d\u96e3\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8a72\u5e78\u707d\u6a02\u798d\uff1b \u4ed6\u5011\u906d\u96e3\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8a72\u8d81\u706b\u6253\u52ab\uff1b"
                },
                "14": {
                    "verse_nr": "14",
                    "verse": "\u4f60\u4e0d\u8a72\u7ad9\u5728\u8def\u53e3\u622a\u6bba\u90a3\u4e9b\u9003\u4ea1\u8005\uff1b \u4ed6\u5011\u906d\u96e3\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8a72\u628a\u5016\u5b58\u8005\u4ea4\u7d66\u4ec7\u6575\u3002"
                },
                "15": {
                    "verse_nr": "15",
                    "verse": "\u300c\u8036\u548c\u83ef\u61f2\u7f70\u842c\u570b\u7684\u65e5\u5b50\u8fd1\u4e86\u3002 \u5fc5\u6309\u4f60\u7684\u6240\u4f5c\u6240\u70ba\u5831\u61c9\u4f60\uff0c \u4f60\u7684\u60e1\u884c\u5fc5\u843d\u5230\u81ea\u5df1\u982d\u4e0a\u3002"
                },
                "16": {
                    "verse_nr": "16",
                    "verse": "\u4f60\u5011\u7336\u5927\u4eba\u5728\u6211\u7684\u8056\u5c71\u4e0a\u600e\u6a23\u98fd\u98f2\u61a4\u6012\uff0c \u842c\u570b\u4e5f\u8981\u7167\u6a23\u98f2\uff0c \u4e14\u8981\u5927\u53e3\u541e\u4e0b\uff0c \u76f4\u5230\u4ed6\u5011\u5b8c\u5168\u6d88\u901d\u3002"
                },
                "17": {
                    "verse_nr": "17",
                    "verse": "\u4ee5\u8272\u5217\u7684\u5fa9\u8208 - \u300c\u7136\u800c\uff0c\u932b\u5b89\u5c71\u5fc5\u6210\u70ba\u907f\u96e3\u6240\uff0c \u6210\u70ba\u8056\u5730\u3002 \u96c5\u5404\u5bb6\u5fc5\u5f97\u5230\u81ea\u5df1\u7684\u7522\u696d\u3002"
                },
                "18": {
                    "verse_nr": "18",
                    "verse": "\u96c5\u5404\u5bb6\u5c07\u6210\u70ba\u706b\uff0c \u7d04\u745f\u5bb6\u5c07\u6210\u70ba\u70c8\u7130\uff0c \u4ee5\u6383\u5bb6\u5c07\u6210\u70ba\u788e\u7a2d\uff0c \u88ab\u706b\u711a\u71d2\u3001\u541e\u566c\uff0c\u7121\u4e00\u4eba\u9003\u812b\u3002 \u9019\u662f\u8036\u548c\u83ef\u8aaa\u7684\u3002"
                },
                "19": {
                    "verse_nr": "19",
                    "verse": "\u300c\u5357\u5730\u7684\u4eba\u5c07\u4f54\u9818\u4ee5\u6383\u5c71\uff1b \u4e18\u9675\u7684\u4eba\u5c07\u4f54\u9818\u975e\u5229\u58eb\uff0c \u596a\u53d6\u4ee5\u6cd5\u84ee\u548c\u6492\u746a\u5229\u4e9e\uff1b \u4fbf\u96c5\u61ab\u4eba\u5c07\u4f54\u9818\u57fa\u5217\u3002"
                },
                "20": {
                    "verse_nr": "20",
                    "verse": "\u88ab\u64c4\u7684\u4ee5\u8272\u5217\u4eba\u5c07\u8fd4\u56de\u5bb6\u5712\uff0c \u4f54\u9818\u9060\u81f3\u6492\u52d2\u6cd5\u4e00\u5e36\u7684\u571f\u5730\uff1b \u5f9e\u8036\u8def\u6492\u51b7\u88ab\u64c4\u5230\u897f\u6cd5\u62c9\u7684\u4eba\u5c07\u4f54\u9818\u5357\u5730\u5404\u57ce\u3002"
                },
                "21": {
                    "verse_nr": "21",
                    "verse": "\u62ef\u6551\u8005\u5fc5\u767b\u4e0a\u932b\u5b89\u5c71\uff0c \u7d71\u6cbb\u4ee5\u6383\u5c71\uff0c \u8036\u548c\u83ef\u5fc5\u505a\u738b\u638c\u6b0a\u3002\u300d"
                }
            }
        }
    }
}