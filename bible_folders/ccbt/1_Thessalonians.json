                "6": {
                    "verse_nr": "6",
                    "verse": "\u6211\u5011\u4e0d\u6c42\u5f97\u5230\u4f60\u5011\u6216\u5176\u4ed6\u4efb\u4f55\u4eba\u7684\u8b9a\u63da\u3002"
