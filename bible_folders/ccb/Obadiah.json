{
    "version": "ccb",
    "book_name": "Obadiah",
    "book_nr": "31",
    "book": {
        "1": {
            "chapter_nr": "1",
            "chapter": {
                "1": {
                    "verse_nr": "1",
                    "verse": "\u4fc4\u5df4\u5e95\u4e9a\u770b\u5230\u7684\u5f02\u8c61\u3002 \u8036\u548c\u534e\u60e9\u7f5a\u4ee5\u4e1c - \u8bba\u5230\u4ee5\u4e1c\uff0c \u4e3b\u8036\u548c\u534e\u8fd9\u6837\u8bf4\uff1a \u201c\u6211\u4eec\u4ece\u8036\u548c\u534e\u90a3\u91cc\u542c\u5230\u6d88\u606f\uff0c \u6709\u4f4d\u4f7f\u8005\u88ab\u6d3e\u5230\u5404\u56fd\uff0c\u8bf4\uff0c \u2018\u6765\uff01\u6211\u4eec\u53bb\u653b\u6253\u4ee5\u4e1c\u5427\uff01\u2019\u201d"
                },
                "2": {
                    "verse_nr": "2",
                    "verse": "\u8036\u548c\u534e\u5bf9\u4ee5\u4e1c\u8bf4\uff1a \u201c\u6211\u8981\u8ba9\u4f60\u6210\u4e3a\u5217\u56fd\u4e2d\u6700\u5f31\u5c0f\u7684\u56fd\u5bb6\uff0c \u4f7f\u4f60\u9971\u53d7\u85d0\u89c6\u3002"
                },
                "3": {
                    "verse_nr": "3",
                    "verse": "\u4f60\u4f4f\u5728\u60ac\u5d16\u5ced\u58c1\u95f4\uff0c \u4f4f\u5728\u9ad8\u5c71\u4e0a\uff0c \u81ea\u4ee5\u4e3a\u8c01\u4e5f\u4e0d\u80fd\u628a\u4f60\u62c9\u4e0b\u6765\uff0c \u4f46\u4f60\u7684\u9a84\u50b2\u6b3a\u9a97\u4e86\u4f60\u3002"
                },
                "4": {
                    "verse_nr": "4",
                    "verse": "\u5373\u4f7f\u4f60\u5982\u9e70\u9ad8\u98de\uff0c \u5728\u661f\u8fb0\u95f4\u7b51\u5de2\uff0c \u6211\u4e5f\u5fc5\u628a\u4f60\u62c9\u4e0b\u6765\u3002 \u8fd9\u662f\u8036\u548c\u534e\u8bf4\u7684\u3002"
                },
                "5": {
                    "verse_nr": "5",
                    "verse": "\u201c\u76d7\u8d3c\u6df1\u591c\u6d17\u52ab\u4f60\u7684\u5bb6\uff0c \u4e0d\u4f1a\u6d17\u52ab\u4e00\u7a7a\uff1b \u4eba\u4eec\u6458\u8461\u8404\uff0c\u4e0d\u4f1a\u6458\u5149\uff1b \u4f46\u4f60\u4f1a\u88ab\u5f7b\u5e95\u6bc1\u706d\uff01"
                },
                "6": {
                    "verse_nr": "6",
                    "verse": "\u4ee5\u626b\u8981\u88ab\u6d17\u52ab\u4e00\u7a7a\uff0c \u4ed6\u85cf\u7684\u73cd\u5b9d\u8981\u88ab\u641c\u53bb\u3002"
                },
                "7": {
                    "verse_nr": "7",
                    "verse": "\u4f60\u7684\u76df\u53cb\u5c06\u4f60\u9010\u51fa\u5bb6\u56ed\uff1b \u4f60\u7684\u670b\u53cb\u6b3a\u9a97\u4f60\uff0c\u6218\u80dc\u4f60\uff1b \u4f60\u7684\u77e5\u5df1\u8bbe\u9677\u9631\u5bb3\u4f60\uff0c \u4f60\u5374\u61f5\u7136\u4e0d\u77e5\u3002\u201d"
                },
                "8": {
                    "verse_nr": "8",
                    "verse": "\u8036\u548c\u534e\u8bf4\uff1a\u201c\u5230\u90a3\u5929\uff0c \u6211\u8981\u6bc1\u706d\u4ee5\u4e1c\u7684\u667a\u8005\uff0c \u9664\u6389\u4ee5\u626b\u5c71\u4e0a\u7684\u660e\u54f2\u3002"
                },
                "9": {
                    "verse_nr": "9",
                    "verse": "\u63d0\u5e54\u7684\u52c7\u58eb\u5fc5\u60ca\u614c\u5931\u63aa\uff0c \u4ee5\u626b\u5c71\u4e0a\u7684\u4eba\u5c3d\u906d\u6740\u622e\u3002"
                },
                "10": {
                    "verse_nr": "10",
                    "verse": "\u60e9\u7f5a\u4ee5\u4e1c\u7684\u539f\u56e0 - \u201c\u56e0\u4f60\u66fe\u6b8b\u66b4\u5730\u5bf9\u5f85\u540c\u80de\u5144\u5f1f\u96c5\u5404\uff0c \u4f60\u5fc5\u8499\u7f9e\uff0c\u6c38\u906d\u6bc1\u706d\u3002"
                },
                "11": {
                    "verse_nr": "11",
                    "verse": "\u5916\u65cf\u4eba\u63a0\u593a\u96c5\u5404\u7684\u8d22\u7269\uff0c \u653b\u5165\u8036\u8def\u6492\u51b7\u62bd\u7b7e\u5206\u8d43\u65f6\uff0c \u4f60\u7adf\u7136\u8896\u624b\u65c1\u89c2\uff0c \u5c31\u50cf\u4ed6\u4eec\u7684\u540c\u4f19\u4e00\u6837\u3002"
                },
                "12": {
                    "verse_nr": "12",
                    "verse": "\u4f60\u7684\u4eb2\u65cf\u906d\u96be\u4e4b\u65e5\uff0c \u4f60\u4e0d\u8be5\u5e78\u707e\u4e50\u7978\uff1b \u72b9\u5927\u4eba\u88ab\u706d\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8be5\u5174\u9ad8\u91c7\u70c8\uff1b \u4ed6\u4eec\u906d\u96be\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8be5\u53e3\u51fa\u72c2\u8a00\uff1b"
                },
                "13": {
                    "verse_nr": "13",
                    "verse": "\u6211\u5b50\u6c11\u906d\u96be\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8be5\u95ef\u8fdb\u4ed6\u4eec\u7684\u57ce\uff1b \u4ed6\u4eec\u906d\u96be\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8be5\u5e78\u707e\u4e50\u7978\uff1b \u4ed6\u4eec\u906d\u96be\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8be5\u8d81\u706b\u6253\u52ab\uff1b"
                },
                "14": {
                    "verse_nr": "14",
                    "verse": "\u4f60\u4e0d\u8be5\u7ad9\u5728\u8def\u53e3\u622a\u6740\u90a3\u4e9b\u9003\u4ea1\u8005\uff1b \u4ed6\u4eec\u906d\u96be\u7684\u65e5\u5b50\uff0c \u4f60\u4e0d\u8be5\u628a\u5e78\u5b58\u8005\u4ea4\u7ed9\u4ec7\u654c\u3002"
                },
                "15": {
                    "verse_nr": "15",
                    "verse": "\u201c\u8036\u548c\u534e\u60e9\u7f5a\u4e07\u56fd\u7684\u65e5\u5b50\u8fd1\u4e86\u3002 \u5fc5\u6309\u4f60\u7684\u6240\u4f5c\u6240\u4e3a\u62a5\u5e94\u4f60\uff0c \u4f60\u7684\u6076\u884c\u5fc5\u843d\u5230\u81ea\u5df1\u5934\u4e0a\u3002"
                },
                "16": {
                    "verse_nr": "16",
                    "verse": "\u4f60\u4eec\u72b9\u5927\u4eba\u5728\u6211\u7684\u5723\u5c71\u4e0a\u600e\u6837\u9971\u996e\u6124\u6012\uff0c \u4e07\u56fd\u4e5f\u8981\u7167\u6837\u996e\uff0c \u4e14\u8981\u5927\u53e3\u541e\u4e0b\uff0c \u76f4\u5230\u4ed6\u4eec\u5b8c\u5168\u6d88\u901d\u3002"
                },
                "17": {
                    "verse_nr": "17",
                    "verse": "\u4ee5\u8272\u5217\u7684\u590d\u5174 - \u201c\u7136\u800c\uff0c\u9521\u5b89\u5c71\u5fc5\u6210\u4e3a\u907f\u96be\u6240\uff0c \u6210\u4e3a\u5723\u5730\u3002 \u96c5\u5404\u5bb6\u5fc5\u5f97\u5230\u81ea\u5df1\u7684\u4ea7\u4e1a\u3002"
                },
                "18": {
                    "verse_nr": "18",
                    "verse": "\u96c5\u5404\u5bb6\u5c06\u6210\u4e3a\u706b\uff0c \u7ea6\u745f\u5bb6\u5c06\u6210\u4e3a\u70c8\u7130\uff0c \u4ee5\u626b\u5bb6\u5c06\u6210\u4e3a\u788e\u79f8\uff0c \u88ab\u706b\u711a\u70e7\u3001\u541e\u566c\uff0c\u65e0\u4e00\u4eba\u9003\u8131\u3002 \u8fd9\u662f\u8036\u548c\u534e\u8bf4\u7684\u3002"
                },
                "19": {
                    "verse_nr": "19",
                    "verse": "\u201c\u5357\u5730\u7684\u4eba\u5c06\u5360\u9886\u4ee5\u626b\u5c71\uff1b \u4e18\u9675\u7684\u4eba\u5c06\u5360\u9886\u975e\u5229\u58eb\uff0c \u593a\u53d6\u4ee5\u6cd5\u83b2\u548c\u6492\u739b\u5229\u4e9a\uff1b \u4fbf\u96c5\u60af\u4eba\u5c06\u5360\u9886\u57fa\u5217\u3002"
                },
                "20": {
                    "verse_nr": "20",
                    "verse": "\u88ab\u63b3\u7684\u4ee5\u8272\u5217\u4eba\u5c06\u8fd4\u56de\u5bb6\u56ed\uff0c \u5360\u9886\u8fdc\u81f3\u6492\u52d2\u6cd5\u4e00\u5e26\u7684\u571f\u5730\uff1b \u4ece\u8036\u8def\u6492\u51b7\u88ab\u63b3\u5230\u897f\u6cd5\u62c9\u7684\u4eba\u5c06\u5360\u9886\u5357\u5730\u5404\u57ce\u3002"
                },
                "21": {
                    "verse_nr": "21",
                    "verse": "\u62ef\u6551\u8005\u5fc5\u767b\u4e0a\u9521\u5b89\u5c71\uff0c \u7edf\u6cbb\u4ee5\u626b\u5c71\uff0c \u8036\u548c\u534e\u5fc5\u505a\u738b\u638c\u6743\u3002\u201d"
                }
            }
        }
    }
}